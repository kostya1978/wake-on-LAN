<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Wake-on-LAN</display-name>

    <servlet>
        <servlet-name>WakeOnLanServlet</servlet-name>
        <servlet-class>ru.tesoft.calculator.WakeOnLanServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MagicPacketServlet</servlet-name>
        <servlet-class>ru.tesoft.calculator.MagicPacketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WakeOnLanServlet</servlet-name>
        <url-pattern>/WakeOnLanServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MagicPacketServlet</servlet-name>
        <url-pattern>/MagicPacketServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
